<% layout('/layouts/boilerplate') %>
<body>
    <div class="category">
        <div class="main">
            <i class="fa-solid fa-sliders"></i>
            <%= category %>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 mt-3">
        <% for(let listing of listings) { %>
            <a class="listing-anchor" href="/listings/<%= listing._id %>">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 23rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b>
                            <br>
                            &#8377;<%=listing.price.toLocaleString('en-IN')%> / night
                            <i class="taxation">+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>