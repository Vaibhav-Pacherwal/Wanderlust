<% layout('/layouts/boilerplate') %>
    <body>
        <div id="filters">
            <div class="categories">
                <div class="filter">
                    <a href="/listings">
                        <div><i class="fa-solid fa-fire"></i></div>
                        <p>Trending</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=room">
                        <div><i class="fa-solid fa-bed"></i></div>
                        <p>Rooms</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=iconic cities">
                        <div><i class="fa-solid fa-mountain-city"></i></div>
                        <p>Iconic Cities</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=mountain">
                        <div><i class="fa-solid fa-mountain-sun"></i></div>
                        <p>Mountains</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=castles">
                        <div><i class="fa-brands fa-fort-awesome"></i></div>
                        <p>Castles</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=pools">
                        <div><i class="fa-solid fa-person-swimming"></i></div>
                        <p>Amazing Pools</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=camping">
                        <div><i class="fa-solid fa-campground"></i></div>
                        <p>Campings</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=farm">
                        <div><i class="fa-solid fa-cow"></i></div>
                        <p>Farms</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=arctic">
                        <div><i class="fa-solid fa-snowflake"></i></div>
                        <p>Arctic</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=domes">
                        <div><i class="fa-solid fa-igloo"></i></div>
                        <p>Domes</p>
                    </a>
                </div>
                <div class="filter">
                    <a href="/listings/filter?q=boats">
                        <div><i class="fa-solid fa-ship"></i></i></div>
                        <p>Boats</p>
                    </a>
                </div>
            </div>

            <div class="tax-toggler">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 mt-3">
                <% for(let listing of allListings) { %>
                <a class="listing-anchor" href="/listings/<%= listing._id %>">
                    <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 23rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b>
                            <br>
                            &#8377;<%=listing.price.toLocaleString('en-IN')%> / night
                            <i class="taxation">+18% GST</i>
                        </p>
                    </div>
                    </div>
                </a>
            <% } %>
        </div>
    </body>
